generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Job          Job[]
  Track        Track[]
}

model Job {
  id          String    @id @default(cuid())
  userId      String
  prompt      String
  preset      String?
  status      JobStatus @default(QUEUED)
  resultUrl   String?
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  durationSec Int?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks      Track[]
}

model Track {
  id              String   @id @default(cuid())
  userId          String
  jobId           String?
  title           String
  url             String
  durationSeconds Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  job             Job?     @relation(fields: [jobId], references: [id])
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([jobId])
}

model Preset {
  id                 String   @id @default(cuid())
  slug               String   @unique
  label              String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  defaultDurationSec Int?
}

enum JobStatus {
  QUEUED
  PROCESSING
  DONE
  FAILED
}
