// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  name         String?
  passwordHash String

  // ðŸ”¹ Stripe + Credits
  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique
  credits              Int     @default(0)
  isAdmin              Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Job     Job[]
  tracks  Track[]
  stories Story[]
}

model Job {
  id          String    @id @default(cuid())
  userId      String
  title       String?
  prompt      String
  preset      String?
  language    String?
  status      JobStatus @default(QUEUED)
  resultUrl   String?
  error       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  durationSec Int?
  voiceStyle  String    @default("soft") // "soft" | "whisper"
  voiceGender String    @default("female") // "female" | "male"

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks Track[]
}

model Story {
  id        String   @id @default(cuid())
  userId    String
  title     String
  preset    String   @default("sleep-story")
  language  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks Track[]

  @@index([userId, createdAt])
}

model Track {
  id              String   @id @default(cuid())
  userId          String
  jobId           String?
  title           String
  url             String
  durationSeconds Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  job  Job? @relation(fields: [jobId], references: [id])
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Public Sharing
  isPublic  Boolean @default(false)
  shareSlug String? @unique

  // âœ… Album / Kapitel
  storyId   String?
  partIndex Int? // 1..N (oder 0..N-1, aber konsistent)
  partTitle String?
  story     Story?  @relation(fields: [storyId], references: [id], onDelete: Cascade)

  // Optional aber sehr hilfreich: Reihenfolge eindeutig
  @@unique([storyId, partIndex])
  @@index([userId, createdAt])
  @@index([jobId])
  @@index([storyId, partIndex])
}

model Preset {
  id                 String   @id @default(cuid())
  slug               String   @unique
  label              String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  defaultDurationSec Int?
}

enum JobStatus {
  QUEUED
  PROCESSING
  DONE
  FAILED
}
